<% content_for :header do %>
  <div class="container">
    <nav class="nav">
      <ul class="justify-end full-width gap">
        <% unless authenticated? %>
          <%= link_to "Login", new_session_path %>
        <% end %>
      </ul>
    </nav>
  </div>
<% end %>

<% if @search.errors.any? %>
  <div class="errors">
    <ul>
      <% @search.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @search, url: searches_path do |form| %>
  <div class="searches__input-container bordered vstack gap-none">
    <div class="hstack gap-none">
      <%= form.text_field :query, placeholder: random_book_title, class: "empty" %>
      <%= button_tag type: "submit", formaction: search_searches_path, formmethod: "get", class: "search-btn" do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          fill="#000000"
          viewBox="0 0 256 256"
        >
          <path
            d="M229.66,218.34l-50.07-50.06a88.11,88.11,0,1,0-11.31,11.31l50.06,50.07a8,8,0,0,0,11.32-11.32ZM40,112a72,72,0,1,1,72,72A72.08,72.08,0,0,1,40,112Z"
          ></path>
        </svg>
      <% end %>

      <%= button_tag type: "submit", class: "save-btn" do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          fill="#000000"
          viewBox="0 0 256 256"
        >
          <path
            d="M219.31,72,184,36.69A15.86,15.86,0,0,0,172.69,32H48A16,16,0,0,0,32,48V208a16,16,0,0,0,16,16H208a16,16,0,0,0,16-16V83.31A15.86,15.86,0,0,0,219.31,72ZM168,208H88V152h80Zm40,0H184V152a16,16,0,0,0-16-16H88a16,16,0,0,0-16,16v56H48V48H172.69L208,83.31ZM160,72a8,8,0,0,1-8,8H96a8,8,0,0,1,0-16h56A8,8,0,0,1,160,72Z"
          ></path>
        </svg>
      <% end %>
    </div>

    <div
      class="searches__actions hstack gap-none bordered-block-start"
      style="height: 3rem;"
    >
      <%# filters %>
      <div class="bordered-inline-end">
        <button
          class="link searches__toggle-filters"
          type="button"
          onclick="document.getElementById('filters-summary').click()"
        >
          Filters
        </button>
      </div>

      <%# link to all searches %>
      <div class="bordered-inline-end">
        <%= link_to "All searches", searches_path %>
      </div>

      <div><a href="#">Account</a></div>
    </div>

    <details class="searches__filters" open>
      <summary id="filters-summary" style="display: none;"></summary>
      <div class="padding searches__filter-fieldset vstack">
        <div class="searches__filter-field">
          <%= form.label :category_ids, "Category" %>
          <%= form.select :category_ids, Search.category_options_for_select, include_blank: "All categories" %>
        </div>

        <div class="searches__filter-field">
          <%= form.label :buying_options %>
          <%= form.select :buying_options, Search.buying_options_for_select, include_blank: "Unspecified" %>
        </div>

        <div class="searches__filter-field">
          <%= form.label :conditions %>
          <%= form.select :conditions, Search.condition_options_for_select %>
        </div>

        <div class="searches__filter-field">
          <%= form.label :minimum %>
          <div class="currency">
            <%= form.text_field :minimum, placeholder: "0.00" %>
          </div>
        </div>

        <div class="searches__filter-field">
          <%= form.label :maximum %>
          <div class="currency">
            <%= form.text_field :maximum, placeholder: "100.00" %>
          </div>
        </div>

        <div class="searches__filter-field">
          <%= form.label :search_in_description %>
          <div><%= form.check_box :search_in_description %></div>
        </div>
      </div>
    </details>
  </div>
<% end %>

<% if @results.present? %>
  <p>Total: <%= @total %></p>
  <p>Filter string: <%= @filters %></p>
  <% @results.each do |result| %>
    <div
      style="margin-bottom: 30px; padding: 15px; border: 1px solid #ddd;"
    >
      <h3 style="margin: 0 0 10px 0; color: #0066cc;">
        <a
          href="<%= result["itemWebUrl"] %>"
          style="color: #0066cc; text-decoration: none;"
        >
          <%= result["title"] || 'Untitled Item' %>
        </a>
      </h3>

      <table style="width: 100%; border-collapse: collapse;">
        <tr>
          <td style="vertical-align: top; padding-right: 20px; width: 200px;">
            <% if result["image"] && result["image"]["imageUrl"] %>
              <img
                src="<%= result["image"]["imageUrl"] %>"
                alt="<%= result["title"] %>"
                style="max-width: 180px; border: 1px solid #ccc;"
              >
            <% end %>
          </td>
          <td style="vertical-align: top;">
            <p style="margin: 5px 0;"><strong>Quantity:</strong> 1</p>

            <p style="margin: 5px 0;">
              <strong>BuyItNow:</strong>
              <%= result["price"]["value"] %>
              <%= result["price"]["currency"] %>
            </p>

            <% if result["shippingOptions"] && result["shippingOptions"].first %>
              <% shipping = result["shippingOptions"].first["shippingCost"] %>
              <p style="margin: 5px 0;">
                <strong>Shipping:</strong>
                <% if shipping && shipping["value"] %>
                  <%= shipping["value"] %>
                  <%= shipping["currency"] %>
                <% else %>
                  Not specified
                <% end %>
              </p>
            <% end %>

            <p style="margin: 5px 0;">
              <strong>eBay Site:</strong>
              <%= result["listingMarketplaceId"] || 'US' %>
            </p>

            <p style="margin: 5px 0;">
              <strong>Condition:</strong>
              <%= result["condition"] %>
            </p>

            <% if result["itemLocation"] %>
              <p style="margin: 5px 0;">
                <strong>Location:</strong>
                <%= result["itemLocation"]["postalCode"] %>
                ,
                <%= result["itemLocation"]["country"] %>
              </p>
            <% end %>

            <p style="margin: 5px 0;">
              <strong>Seller:</strong>
              <%= result["seller"]["username"] %>
              (
              <%= result["seller"]["feedbackPercentage"] %>
              positive feedback)
            </p>

            <% if result["itemOriginDate"] %>
              <p style="margin: 5px 0;">
                <strong>Started:</strong>
                <%= result["itemOriginDate"] %>
              </p>
            <% end %>

            <% if result["categories"] && result["categories"].any? %>
              <p style="margin: 5px 0;">
                <strong>Category:</strong>
                <%= result["categories"].first["categoryName"] %>
              </p>
            <% end %>

            <% if result["buyingOptions"] && result["buyingOptions"].any? %>
              <p style="margin: 5px 0;">
                <strong>Buying Options:</strong>
                <%= result["buyingOptions"].join(", ") %>
              </p>
            <% end %>
          </td>
        </tr>
      </table>

      <hr style="margin: 15px 0; border: 1px solid #ddd;">

      <p style="margin: 10px 0;"><strong>Item Specifics:</strong></p>

      <p style="margin: 5px 0; font-size: 14px;">
        <% if result["condition"] %>
          Condition:
          <%= result["condition"] %>
          <br>
        <% end %>
        <% if result["itemId"] %>
          Item ID:
          <%= result["itemId"] %>
          <br>
        <% end %>
        <% if result["legacyItemId"] %>
          Legacy Item ID:
          <%= result["legacyItemId"] %>
          <br>
        <% end %>
      </p>

      <p style="margin: 10px 0;">
        <strong>Short Description:</strong>
        <%= result["title"] %>
      </p>
    </div>
  <% end %>
  <hr style="margin: 20px 0;">
  <p style="font-size: 12px; color: #666;">
    <strong>Total Results:</strong><%= @results.length %> results found for your search.
    <br>
    <strong>Total Results:</strong><%= @results.length %> results found for your search.
    <br>
    <strong>Total Results:</strong>
    <%= @results.length %>
    results found for your search.
    <br>
    <strong>Total Results:</strong>
    <%= @results.length %>
    results found for your search.
    <br>
    <strong>Total Before Filtering:</strong>
    <%= @total %>
    . Limit is 50. Try to reduce this number with additional filters.
  </p>
<% end %>
