<% content_for :header do %>
  <div class="container">
    <nav class="nav">
      <ul class="justify-end full-width gap">
        <% unless authenticated? %>
          <%= link_to "Login", new_session_path %>
        <% end %>
      </ul>
    </nav>
  </div>
<% end %>

<% if @search.errors.any? %>
  <div class="errors">
    <ul>
      <% @search.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @search, url: searches_path do |form| %>
  <div class="searches__input-container bordered vstack gap-none">
    <div class="hstack gap-none">
      <%= form.text_field :query, placeholder: random_book_title, class: "empty" %>
      <%= button_tag type: "submit", formaction: search_searches_path, formmethod: "get", class: "search-btn" do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          fill="#000000"
          viewBox="0 0 256 256"
        >
          <path
            d="M229.66,218.34l-50.07-50.06a88.11,88.11,0,1,0-11.31,11.31l50.06,50.07a8,8,0,0,0,11.32-11.32ZM40,112a72,72,0,1,1,72,72A72.08,72.08,0,0,1,40,112Z"
          ></path>
        </svg>
      <% end %>

      <%= button_tag type: "submit", class: "save-btn" do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          fill="#000000"
          viewBox="0 0 256 256"
        >
          <path
            d="M219.31,72,184,36.69A15.86,15.86,0,0,0,172.69,32H48A16,16,0,0,0,32,48V208a16,16,0,0,0,16,16H208a16,16,0,0,0,16-16V83.31A15.86,15.86,0,0,0,219.31,72ZM168,208H88V152h80Zm40,0H184V152a16,16,0,0,0-16-16H88a16,16,0,0,0-16,16v56H48V48H172.69L208,83.31ZM160,72a8,8,0,0,1-8,8H96a8,8,0,0,1,0-16h56A8,8,0,0,1,160,72Z"
          ></path>
        </svg>
      <% end %>
    </div>

    <div
      class="searches__actions hstack gap-none bordered-block-start"
      style="height: 3rem;"
    >
      <%# filters %>
      <div class="bordered-inline-end">
        <button
          class="link searches__toggle-filters"
          type="button"
          onclick="document.getElementById('filters-summary').click()"
        >
          Filters
        </button>
      </div>

      <%# link to all searches %>
      <div class="bordered-inline-end">
        <%= link_to "All searches", searches_path %>
      </div>

      <div><a href="#">Account</a></div>
    </div>

    <details class="searches__filters" open>
      <summary id="filters-summary" style="display: none;"></summary>
      <div class="padding searches__filter-fieldset vstack">
        <div class="searches__filter-field">
          <%= form.label :category_ids, "Category" %>
          <%= form.select :category_ids, Search.category_options_for_select, include_blank: "All categories" %>
        </div>

        <div class="searches__filter-field">
          <%= form.label :buying_options %>
          <%= form.select :buying_options, Search.buying_options_for_select, include_blank: "Unspecified" %>
        </div>

        <div class="searches__filter-field">
          <%= form.label :conditions %>
          <%= form.select :conditions, Search.condition_options_for_select %>
        </div>

        <div class="searches__filter-field">
          <%= form.label :minimum %>
          <div class="currency">
            <%= form.text_field :minimum, placeholder: "0.00" %>
          </div>
        </div>

        <div class="searches__filter-field">
          <%= form.label :maximum %>
          <div class="currency">
            <%= form.text_field :maximum, placeholder: "100.00" %>
          </div>
        </div>

        <div class="searches__filter-field">
          <%= form.label :search_in_description %>
          <div><%= form.check_box :search_in_description %></div>
        </div>
      </div>
    </details>
  </div>
<% end %>

<% if @results.present? %>
  <div class="search-results container margin-top">
    <h2>Search Results</h2>
    <div class="results-list">
      <% @results.each do |result| %>
        <div class="result-item bordered padding margin-bottom">
          <h3><%= result[:title] %></h3>
          <p><%= result[:price] %></p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
